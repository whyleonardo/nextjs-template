{
  "name": "next-template",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "bun run rm -rf node_modules dist .next bun.lockb .tsbuildinfo test-results test-coverage-results",
    "copy-env": "cp .env.example .env",
    "dev": "next dev --turbo",
    "format": "prettier --write --ignore-unknown \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "biome lint --write ./src/**",
    "prepare": "husky",
    "preview": "next build && next start",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "ui:add": "bun x shadcn-ui@latest add"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json}": [
      "biome lint"
    ],
    "*": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@biomejs/biome": "2.0.6",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@t3-oss/env-nextjs": "0.13.8",
    "@tailwindcss/postcss": "4.1.11",
    "@tanstack/react-query": "5.81.5",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "geist": "1.4.2",
    "lucide-react": "0.525.0",
    "next": "15.3.4",
    "next-themes": "0.4.6",
    "radix-ui": "1.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.11",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.25.69"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@tailwindcss/typography": "0.5.16",
    "@tanstack/react-query-devtools": "5.81.5",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "24.0.10",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "fluid-tailwind": "1.0.4",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.17",
    "prettier-plugin-tailwindcss": "0.6.13",
    "tw-animate-css": "1.3.4",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "vitest-fail-on-console": "0.7.1"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
