{
  "name": "next-template",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rimraf --glob node_modules dist .next bun.lockb .tsbuildinfo test-results test-coverage-results",
    "copy-env": "cp .env.example .env",
    "dev": "next dev --turbo",
    "format": "prettier --write --ignore-unknown \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "biome lint --write ./src/**",
    "prepare": "husky",
    "preview": "next build && next start",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "ui:add": "bun x shadcn-ui@latest add"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json}": [
      "biome lint --apply ."
    ],
    "*": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/zod-openapi": "^0.18.0",
    "@neondatabase/serverless": "^0.10.3",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-slot": "1.1.0",
    "@scalar/hono-api-reference": "^0.5.161",
    "@t3-oss/env-nextjs": "0.11.1",
    "@tailwindcss/postcss": "^4.0.0-beta.2",
    "@tanstack/react-query": "^5.61.3",
    "better-auth": "^1.0.2",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "geist": "1.3.1",
    "hono": "^4.6.11",
    "lucide-react": "^0.460.0",
    "next": "^15.0.3",
    "next-themes": "0.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "0.33.5",
    "tailwind-merge": "^2.5.5",
    "tailwind-variants": "^0.3.0",
    "tailwindcss": "^4.0.0-beta.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@tailwindcss/typography": "0.5.15",
    "@tanstack/react-query-devtools": "^5.61.3",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "2.1.5",
    "@vitest/ui": "2.1.5",
    "drizzle-kit": "^0.28.1",
    "fluid-tailwind": "1.0.4",
    "husky": "9.1.7",
    "jsdom": "25.0.1",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.5",
    "prettier-plugin-tailwindcss": "0.6.9",
    "rimraf": "6.0.1",
    "typescript": "5.7.2",
    "vite-tsconfig-paths": "5.1.3",
    "vitest": "2.1.5",
    "vitest-fail-on-console": "0.7.1"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
