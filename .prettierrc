{
	"plugins": [
		"prettier-plugin-tailwindcss",
		"@trivago/prettier-plugin-sort-imports"
	],
	"trailingComma": "none",
	"tabWidth": 2,
	"semi": false,
	"singleQuote": false,
	"importOrder": [
		"/^react/",
		"/^next/",
		"/^@next/",
		"^@/components/(.*)$",
		"^@/config/(.*)$",
		"^@/lib/(.*)$",
		"^@/styles/(.*)$",
		"^@/(.*)$",
		"^@(.*)$",
		"^(?!next|react)[a-z]",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
