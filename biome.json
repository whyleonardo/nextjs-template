{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false
  },
  "files": {
    "experimentalScannerIgnores": [
      "**/*.json",
      "dist/**",
      ".cache",
      ".husky/**",
      "public/**",
      "*.config.*",
      "node_modules/**",
      "*.esm.js",
      ".next"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      }
    }
  }
}
